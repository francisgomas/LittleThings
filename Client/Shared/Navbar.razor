@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider

<!-- Navbar Start -->
<div class="container-fluid">
    <div class="row border-top px-xl-5">
        <div class="col-lg-12">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                <a href="" class="text-decoration-none d-block d-lg-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">Little</span>Things</h1>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto py-0">
                        @if (!authorized)
                        {
                            <a href="index.html" class="nav-item nav-link active">Home</a>
                            <a href="shop.html" class="nav-item nav-link">Shop</a>
                            <a href="detail.html" class="nav-item nav-link">Shop Detail</a>
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Pages</a>
                                <div class="dropdown-menu rounded-0 m-0">
                                    <a href="cart.html" class="dropdown-item">Shopping Cart</a>
                                    <a href="checkout.html" class="dropdown-item">Checkout</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Administration</a>
                                <div class="dropdown-menu rounded-0 m-0">
                                    <a @onclick="ShowSocialMedia" class="dropdown-item">Social Media</a>
                                </div>
                            </div>
                        }
                    </div>
                    @if (!authorized)
                    {
                         <div class="navbar-nav ml-auto py-0">
                            <a @onclick="ShowLogin" class="nav-item nav-link">Login</a>
                            <a @onclick="ShowRegister" class="nav-item nav-link">Register</a>
                        </div>
                    }
                </div>
            </nav>

            @if (authorized)
            {
                <Slider />
            }
        </div>
    </div>
</div>
<!-- Navbar End -->

@code {
    bool authorized = false;

    protected override async Task OnInitializedAsync()
    {
        
    }

    void ShowSocialMedia()
    {
        NavigationManager.NavigateTo("admin/social-media");
    }

    void ShowLogin()
    {
        NavigationManager.NavigateTo("login");
    }

    void ShowRegister()
    {
        NavigationManager.NavigateTo("register");
    }
}