@page "/register"
@inject NavigationManager NavigationManager

<PageTitle>Register</PageTitle>

<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Register</span></h2>
    </div>
    <div class="row px-xl-5">
        <div class="col-lg-12 mb-5">
            <div class="contact-form">
                <div id="success"></div>
                <form name="sentMessage" id="contactForm" novalidate="novalidate">
                     <div class="control-group">
                        <input type="text" class="form-control" id="name" placeholder="Enter name" required="required" data-validation-required-message="Please enter your name" aria-invalid="false">
                        <p class="help-block text-danger"></p>
                    </div>
                     <div class="control-group">
                        <input type="text" class="form-control" id="name" placeholder="Enter email" required="required" data-validation-required-message="Please enter your name" aria-invalid="false">
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <input type="text" class="form-control" id="name" placeholder="Enter username" required="required" data-validation-required-message="Please enter your name" aria-invalid="false">
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <input type="email" class="form-control" id="email" placeholder="Enter password" required="required" data-validation-required-message="Please enter your email">
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <input type="email" class="form-control" id="email" placeholder="Reenter password" required="required" data-validation-required-message="Please enter your email">
                        <p class="help-block text-danger"></p>
                    </div>
                    <div>
                        <button class="btn btn-primary py-2 px-5" type="submit" id="sendMessageButton">Create Account </button>
                        <button class="btn btn-info py-2 px-5" @onclick="ShowLogin" id="sendMessageButton">Go to login </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@code{
    protected override async Task OnInitializedAsync()
    {

    }

    void ShowLogin()
    {
        NavigationManager.NavigateTo("/login");
    }
}